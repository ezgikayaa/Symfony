{% extends "Layout.twig" %}
{%block title %}Grup Düzenle{% endblock %} 
{%block col %}
    <div class="page-header float-right">
        <div class="page-title">
            <ol class="breadcrumb text-right">
                <li><a href="{{url}}Home">Anasayfa</a></li>
                <li><a href="{{url}}Groups">Kullanıcı Grupları</a></li>
                <li class="active">Grup Düzenle</li>
            </ol>
        </div>
    </div>
{%endblock %}
{% block content %}
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Grup Düzenle</strong> 
                    </div>
                    <div class="card-body card-block">
                        <form method="post" class="panel" action="?id={{GrupVeri.grupid}}">
                            <div class="form-group">  
                                <label class=" form-control-label">Grup Adı Giriniz</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-users"></i></div>
                                    <input type="text" class="form-control" name="grupadi"  value="{{GrupVeri.grupadi}}">
                                </div>
                            </div>                                

                            <div class="form-group"> 
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th> Ekle</th>
                                            <th> Sil </th>
                                            <th>Düzenle</th>
                                            <th>Görüntüle</th>

                                        </tr>
                                    </thead>
                                    <tbody>                                                                                      



                                        {%for modul in modul%} 

                                            <tr> 
                                        <td style="width:200px;">{{modul.modul_adi}}</td>
                                        <td style="width:200px;"><input type="checkbox" name="ekle[{{modul.id}}]" {%for id,izin in ModulIzinleri%}{%for key,value in izin%}{%if modul.id== id%}{% if value.Ekle=='1' %} checked {% endif %}{%endif%}{%endfor%}{%endfor%} /></td>
                                        <td style="width:200px;"><input type="checkbox" name="sil[{{modul.id}}]" {%for id,izin in ModulIzinleri%}{%for key,value in izin%}{%if modul.id== id%}{% if value.Sil=='1' %} checked{% endif %}{%endif%}{%endfor%}{%endfor%} /> </td>
                                        <td style="width:200px;"><input type="checkbox" name="duzenle[{{modul.id}}]" {%for id,izin in ModulIzinleri%}{%for key,value in izin%}{%if modul.id== id%}{% if value.Duzenle=='1' %}checked {% endif %}{%endif%}{%endfor%}{%endfor%} /> </td>
                                        <td style="width:200px;"><input type="checkbox" name="goruntule[{{modul.id}}]"{%for id,izin in ModulIzinleri%}{%for key,value in izin%}{%if modul.id== id%}{% if value.Goruntule=='1' %} checked {% endif %}{%endif%}{%endfor%}{%endfor%} /> </td>
                                        </tr>


                                    {%endfor%}



                                    </tbody>
                                </table>
                            </div>
                            <div class="form-group"> 
                                <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30"  id="güncellebutonu2" name="güncellebutonu2" >Güncelle</button> 
                            </div>
                        </form>
                    </div>                                        
                </div>

            </div>
        </div><!-- .animated -->

    </div><!-- .content -->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.6/sweetalert2.min.css'>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.6/sweetalert2.js'></script>
        <script>
            $("#güncellebutonu2").click(function () {
                swal("Güncellendi", "Grup başarıyla güncellendi", "success");
            });
        </script>
    {% endblock %}