<body class="bg-dark">
<div class="sufee-login d-flex align-content-center flex-wrap">
    <div class="container">
        <div class="login-content">
          
            <div class="login-form">
                   <div class="login-logo">
                <a href="{{url}}Home">
              <img class="align-content" src="{{url}}views/images/logo4.jpg" alt="">
                </a>
            </div>
                <form method="post" action='{{url}}Login'>
                    <div class="form-group">
                        <label>EMAİL ADRESİ</label>
                        <input type="email" name="email"  class="form-control" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label>ŞİFRE</label>
                        <input type="password" name="sifre"  class="form-control" placeholder="Şifre" required>
                    </div>
                    <div class="form-group">
                               <img src='{{ captcha }}'/>
                          <input type="text" name="kontrol" required/> <br/>           
                    </div>    
                    <div class="checkbox">
                        <label class="pull-right">
                            <a href="{{url}}Forget">Şifremi Unuttum?</a>
                        </label>
                    </div> 
                    <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30" id="girisbutonu" name="girisbutonu">Giriş Yap</button>
                    <div style="padding-top:10px">{{ msg|raw}}</div> 

                    
                 </form>
            </div>
        </div>
    </div>
</div>
           
</body>

